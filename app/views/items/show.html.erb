<section>
  <div class="container">
    <div class="row">
      <!--<div class="col-sm-3">-->
      <!--<div class="left-sidebar">-->
      <!--<div class="panel-group category-products" id="accordian">-->
      <%#= render partial: 'categories/categories' %>
      <!--</div>-->
      <!--</div>-->
      <!--</div>-->
      <div class="col-sm-12 padding-right">
        <div class="product-details"><!--product-details-->
          <div class="col-sm-5">
            <div class="view-product">
              <%= image_tag @item.item_variants.present? ? @item.item_variants.first.item_image : 'sample_item.jpeg' %>
            </div>
          </div>
          <div class="col-sm-7">
            <div class="product-information"><!--/product-information-->
              <h2><%= @item.name %></h2>

              <p><%= @item.description %></p>

              <div class="item_variant_container">
                <%= select_tag 'item_variant', options_for_select([[1, 2], [1, 2], [1, 2], [1, 2]]), class: 'item_variant_selection' %>
              </div>
              <div class="item_actions_container">
              <span>
                <input type="text" value="3"/>
                <%= link_to cart_path, class: "btn btn-fefault cart" do %>
                        <i class="fa fa-shopping-cart"></i>
                        Add to cart
                  <% end %>
                <%= link_to cart_path, class: "btn btn-fefault cart" do %>
                        <i class="fa fa-shopping-cart"></i>
                        Go to cart
                  <% end %>
                </span>
              </div>
              <p><b>Availability:</b> In Stock</p>

              <p><b>Condition:</b> New</p>

              <p><b>Brand:</b> Demo Application</p>
            </div>
            <!--/product-information-->
          </div>
        </div>
        <!--/product-details-->


        <!--/category-tab-->

      </div>
    </div>
  </div>
</section>

<script>
    $(function () {
        function ItemVariantSelector(options) {
            this.options = {
                item_variants: null
            };
            $.extend(this.options, options);
        }

        ItemVariantSelector.prototype = {};

        var variant_selector = new ItemVariantSelector({
            item_variants: <%== @item.item_variants %>
        });

    })
</script>

<style>
  .item_variant_container{
      margin-top: 15px;
  }
</style>