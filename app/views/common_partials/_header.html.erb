<header id="header"><!--header-->

  <!-- ============================ Header Top ==================================-->
  <div class="header_top"><!--header_top-->
    <div class="container">
      <div class="row">
        <div class="col-sm-6">
          <%= link_to items_path do %>
              <%= image_tag 'header/site_logo.jpg', class: 'logo_icon' %>
          <% end %>
          <%#= link_to items_path, class: 'header_item_list' do %>
          <!--<i class="fa fa-bars" aria-hidden="true"></i>-->
          <%# end %>
          <%#= link_to items_path do %>
          <!--<span class="site_name">Kapoor Handlooms</span>-->
          <%# end %>
        </div>
        <div class="col-sm-6">
          <div class="social-icons pull-right">
            <% if current_user %>
                <ul class="nav navbar-nav">
                  <li class="cart_container">
                    <%= link_to 'javascript:void(0);' do %>
                        <i class="fa fa-shopping-cart" aria-hidden="true" title="Go to cart"></i>
                    <% end %>
                    <span id="cart_item_count"></span>
                  </li>
                  <!--<li>-->
                  <%#= link_to destroy_user_session_path, method: :delete, title: 'Logout' do %>
                  <!--<i class="fa fa-sign-out" aria-hidden="true"></i>-->
                  <%# end %>
                  <!--</li>-->
                </ul>
            <% end %>
          </div>
          <div class="social-icons pull-right">
            <ul class="nav navbar-nav">
              <li>
                <%= link_to about_us_path do %>
                    <i class="fa fa-address-book-o"></i>
                <% end %>
              </li>
              <li><a href="https://www.facebook.com/Indianrugkapoorhandlooms"><i class="fa fa-facebook"></i></a></li>
              <li><a href="https://twitter.com/kapoorhandlooms"><i class="fa fa-twitter"></i></a></li>
              <li><a href="https://www.linkedin.com/in/naresh-kapoor-b8941440"><i class="fa fa-linkedin"></i></a></li>
              <!--<li><a href="#"><i class="fa fa-dribbble"></i></a></li>-->
              <li><a href="javascript:void(0);"><i class="fa fa-google-plus"></i></a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% if current_user %>
      <div class="header-middle"><!--header-middle-->
        <div class="container">
          <div class="row">
            <div class="col-sm-5">
              <div class="logo pull-left">
                <!--<a href="<%#= items_path %>" class="site_name">Kapoor Handlooms</a>-->
                <div class="companyinfo">
                  <h2><a href="<%= items_path %>" class="site_name"><span>Kapoor</span> Handlooms</a></h2>
                </div>

              </div>
              <div class="btn-group pull-right">
                <div class="btn-group">
                  <button type="button" class="btn btn-default dropdown-toggle usa" data-toggle="dropdown">
                    Best Sellers
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu">
                    <% Category.best_sellers.each do |sub_category| %>
                        <li><%= link_to sub_category.name, items_path(sub_category: sub_category.id) %></li>
                    <% end %>
                    <!--<li><a href="">Canada</a></li>-->
                    <!--<li><a href="">UK</a></li>-->
                  </ul>
                </div>

                <div class="btn-group">
                  <button type="button" class="btn btn-default dropdown-toggle usa" data-toggle="dropdown">
                    New Arrival
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu">
                    <% Category.latest.each do |sub_category| %>
                        <li><%= link_to sub_category.name, items_path(sub_category: sub_category.id) %></li>
                    <% end %>
                    <!--<li><a href="">Canadian Dollar</a></li>-->
                    <!--<li><a href="">Pound</a></li>-->
                  </ul>
                </div>
              </div>
            </div>
            <div class="col-sm-7">
              <div class="shop-menu pull-right">
                <ul class="nav navbar-nav">
                  <li><a href="javascript:void(0);"><i class="fa fa-user"></i> Account</a></li>
                  <li><%= link_to items_path do %>
                        <i class="fa fa-star"></i>Home
                    <% end %>
                  </li>
                  <li><a href="<%= user_cart_path %>"><i class="fa fa-shopping-cart"></i> Cart</a></li>
                  <li>
                    <%= link_to destroy_user_session_path, method: :delete do %>
                        <i class="fa fa-sign-out"></i> Logout
                    <% end %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
  <% end %>
  <!--/header-middle-->


</header><!--/header-->

<script>
    $('#cart_item_count').html('<%= current_user.cart_items.count if !!current_user %>');
</script>
<style>
    span#cart_item_count {
        position: absolute;
        left: 26px;
        top: 1px;
    }

    .logo_icon {
        height: 35px;
        width: 50px !important;
    }

    .header_item_list {
        margin-left: 15px;
        font-size: 18px;
    }

    .site_name {
        color: #fff;
        font-weight: 700;
        margin-left: 15px;
        font-size: 16px;
    }

    .header-middle .container {
        width: 100%;
    }
</style>